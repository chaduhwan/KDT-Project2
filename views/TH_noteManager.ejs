        console.log(file.files);
        console.log(title);

        const formData = new FormData();
        for (let i = 0; i < file.files.length; i++) {
          formData.append('title', title);
          formData.append('file_upload', file.files[i]);
        }
        console.log(formData);

        let res = await axios({
          method: 'POST',
          url: '/noteManager/upload',
          data: formData,

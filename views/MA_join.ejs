    <div class="join_container_par">
      <div class="join_container">
        <div class="join_banner">
          <h2>회원가입</h2>
        </div>
        <div class="join_name">
          <h3 class="h3_email">이름</h3>
          <input type="text" id="name" placeholder="이름" />
        </div>
        <div class="join_email">
          <h3 class="h3_email">이메일 주소</h3>
          <input
            type="email"
            id="email"
            placeholder="예) honggildong@gmail.com"
          />
          <div class="errorEmail"></div>
          <div class="join_phone">
            <h3 class="h3_email">핸드폰번호</h3>
            <input
              type="text"
              id="phone"
              placeholder="예) 01012345678"
            />
            <!-- <div class="errorEmail"></div> -->
        </div>
        <div class="join_password">
          <h3 class="h3_password">비밀번호</h3>
          <input type="password" id="pw"  placeholder="비밀번호 길이 8~16, 영문, 숫자, 특수문자 포함"/>
          <div class="errors"></div>
        </div>
        <div class="join_password">
          <h3 class="h3_password">비밀번호 확인</h3>
          <input type="password" id="pwVal" />
          <div class="error"></div>
        </div>

